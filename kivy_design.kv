BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 20

    Label:
        text: "Caffeine Tracker"
        font_size: 24
        size_hint_y: None
        height: 50

    TextInput:
        id: caffeine_input
        hint_text: "Enter amount of caffeine (mg)"
        multiline: False
        font_size: 18
        input_filter: 'float'
        size_hint_y: None
        height: 50

    Button:
        text: "Log Intake"
        font_size: 20
        size_hint_y: None
        height: 50
        on_press: app.log_caffeine_intake()

    Label:
        id: result_label
        text: "Total Caffeine Today: 0 mg"
        font_size: 18
        size_hint_y: None
        height: 50

    ProgressBar:
        id: caffeine_progress
        max: 400  # Assuming 400mg is the daily limit
        value: 0
        size_hint_y: None
        height: 30

    Label:
        id: limit_label
        text: "Your caffeine intake goal is 400 mg/day"
        font_size: 16
        size_hint_y: None
        height: 30

    MDFloatingActionButton:
        icon: "calendar"
        pos_hint: {"center_x": .5}
        on_release: app.open_date_picker()